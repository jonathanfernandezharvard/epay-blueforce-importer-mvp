{
  "name": "epay-blueforce-importer-mvp",
  "version": "0.1.0",
  "private": true,
  "description": "MVP web app to queue and import EPAY Blueforce 'Imports From Web' CSV via Playwright",
  "license": "MIT",
  "engines": {
    "node": ">=18.18.0"
  },
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,ejs,js --exec ts-node --transpile-only src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "migrate": "prisma migrate deploy && prisma generate",
    "prisma:generate": "prisma generate",
    "format": "prettier --write .",
    "lint": "eslint --ext .ts src",
    "test": "vitest run",
    "test:watch": "vitest",
    "playwright:install": "playwright install chromium",
    "create:user": "ts-node --transpile-only scripts/create-user.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "csurf": "^1.11.0",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "pino": "^9.3.2",
    "pino-http": "^9.0.0",
    "playwright": "1.47.2",
    "uuid": "^9.0.1",
    "zod": "^3.23.8",
    "argon2": "^0.31.2"
  },
  "devDependencies": {
    "@types/csurf": "^1.11.5",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/node": "^20.11.30",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.3.3",
    "prisma": "^6.17.1",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  }
}
